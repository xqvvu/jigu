{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "paths": {
      "#lib/*": ["./lib/*"],
      "#drizzle/*": ["./drizzle/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["tsdown.config.ts"]
}
