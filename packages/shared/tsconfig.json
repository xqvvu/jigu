{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "declaration": true,
    "isolatedDeclarations": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "#lib/*": ["lib/*"],
      "#schema/*": ["schema/*"]
    }
  },
  "include": ["lib", "schema"]
}
