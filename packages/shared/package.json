{
  "name": "@jigu/shared",
  "type": "module",
  "exports": {
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "default": "./dist/lib/*.js"
    },
    "./schema/*": {
      "types": "./dist/schema/*.d.ts",
      "default": "./dist/schema/*.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "default": "./dist/schema/index.js"
    }
  },
  "scripts": {
    "build:watch": "tsup --watch",
    "build": "tsup",
    "prepare": "tsup"
  },
  "devDependencies": {
    "@types/node": "catalog:shared",
    "drizzle-kit": "catalog:server",
    "tsup": "catalog:shared",
    "typescript": "catalog:shared"
  },
  "dependencies": {
    "better-auth": "catalog:shared",
    "drizzle-orm": "catalog:server",
    "drizzle-zod": "catalog:server",
    "postgres": "catalog:server",
    "uuid": "^13.0.0",
    "zod": "catalog:shared"
  }
}
